#
# Dynamically generated by Chef for <%= @fqdn %> - local modifications will be replaced
#

dbpath = <%= @dbpath %>
logpath = <%= @logpath %>/mongodb.log
logappend = true
port = <%= @port %>
noauth = true

<% if @journal %>
journal=true
<% else -%>
nojournal=true
<% end -%>

<% if  @replication_set &&  @replication_set.size > 0 %>
replSet = <%= @replication_set %>
<% end %>

<% if @httpinterface %>
rest=true
<% else -%>
nohttpinterface=false
<% end -%>

<% if @fork %>
fork=true
<% end -%>

<% if @quiet %>
quiet=true
<% end -%>

<% if  @additional_settings &&  @additional_settings.size > 0 %>
  <% @additional_settings.each_pair do |k,v| %>
    <%= k %> = <%= v %>
  <% end %>
<% end %>
